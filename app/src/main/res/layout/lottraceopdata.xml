<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="批号："
        android:gravity="center_vertical"
        android:id="@+id/lottraceopdata_tv1"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:id="@+id/lottraceopdatatext_tv1"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lottraceopdata_tv1"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="站位名称："
        android:gravity="center_vertical"
        android:id="@+id/lottracopname_tv1"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_below="@+id/lottraceopdata_tv1"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:id="@+id/lottraceopnametext_tv1"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_below="@+id/lottraceopdatatext_tv1"
        android:layout_toEndOf="@+id/lottracopname_tv1"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/lottracopname_tv1">
        <LinearLayout
            android:id="@+id/lottraceopdataLinearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

    </ScrollView>




</RelativeLayout>
