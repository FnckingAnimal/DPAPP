<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".IncludingSFC.vtqimagetestcheckout">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/isfc_vtqimagetestcheckout_headerrl1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#bec4bf"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5067c6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/isfc_vtqimagetestcheckout_headerll1"
            >
            <TextView
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:text="VTQ ImageTest Checkout:"
                android:gravity="center_vertical"
                android:id="@+id/isfc_vtqimagetestcheckout_mainlabelheader"
                android:textSize="20dp"
                android:textIsSelectable="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:textColor="#ffffff"
                ></TextView>

            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="提交"
                android:id="@+id/isfc_vtqimagetestcheckout_submitbt"
                android:background="@drawable/btn_dl"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/isfc_vtqimagetestcheckout_mainlabelheader"
                android:layout_marginLeft="20dp"
                android:onClick="submitbt"/>

        </LinearLayout>

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="帳號:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/isfc_vtqimagetestcheckout_opl1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_vtqimagetestcheckout_headerll1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text=""
            android:id="@+id/isfc_vtqimagetestcheckout_useret1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_vtqimagetestcheckout_headerll1"
            android:layout_toEndOf="@+id/isfc_vtqimagetestcheckout_opl1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:textAlignment="center"
            android:background="#ffffff"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="密碼:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/isfc_vtqimagetestcheckout_opnotbl1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_vtqimagetestcheckout_opl1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="3dp"
            />
        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text=""
            android:id="@+id/isfc_vtqimagetestcheckout_pwdet"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_vtqimagetestcheckout_opl1"
            android:layout_toEndOf="@+id/isfc_vtqimagetestcheckout_opnotbl1"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="3dp"
            android:textAlignment="center"
            android:background="#ffffff"
            />

    </RelativeLayout>


</RelativeLayout>
