<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".IncludingSFC.folbangdingline">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:id="@+id/isfc_folbangdingline_headerrl1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#bec4bf"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5067c6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/isfc_folbangdingline_headerll1"
            >
            <TextView
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:text="辦定纖體"
                android:gravity="center_vertical"
                android:id="@+id/isfc_folbangdingline_mainlabelheader"
                android:textSize="20dp"
                android:textIsSelectable="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:textColor="#ffffff"
                ></TextView>

            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="提交"
                android:id="@+id/isfc_folbangdingline_submitbt"
                android:background="@drawable/btn_dl"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/isfc_folbangdingline_mainlabelheader"
                android:layout_marginLeft="20dp"
                android:onClick="confirmsubmit"/>

        </LinearLayout>

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="批號:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/isfc_folbangdingline_lotnotl1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folbangdingline_headerll1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="XXXXXXXX"
            android:gravity="center_vertical"
            android:id="@+id/isfc_folbangdingline_lotnotv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folbangdingline_headerll1"
            android:layout_toEndOf="@+id/isfc_folbangdingline_lotnotl1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="站位:"
            android:gravity="center_vertical"
            android:id="@+id/isfc_folbangdingline_opnotl1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folbangdingline_headerll1"
            android:layout_toEndOf="@+id/isfc_folbangdingline_lotnotv1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="XXXXXXXX"
            android:gravity="center_vertical"
            android:id="@+id/isfc_folbangdingline_opnotv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folbangdingline_headerll1"
            android:layout_toEndOf="@+id/isfc_folbangdingline_opnotl1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="纖體1:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/isfc_folbangdingline_line1tl1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folbangdingline_lotnotl1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="3dp"
            />
        <Spinner
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="XXXXXXXX"
            android:gravity="center_vertical"
            android:id="@+id/isfc_folbangdingline_line1sp1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folbangdingline_lotnotl1"
            android:layout_toEndOf="@+id/isfc_folbangdingline_line1tl1"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="3dp"
            />

        <CheckBox
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:id="@+id/isfc_folbangdingline_line1cb1"
            android:layout_below="@+id/isfc_folbangdingline_lotnotl1"
            android:layout_toEndOf="@+id/isfc_folbangdingline_line1sp1"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="纖體2:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/isfc_folbangdingline_line2tl1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folbangdingline_line1tl1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="3dp"
            />

        <Spinner
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="XXXXXXXX"
            android:gravity="center_vertical"
            android:id="@+id/isfc_folbangdingline_line2sp1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folbangdingline_line1tl1"
            android:layout_toEndOf="@+id/isfc_folbangdingline_line2tl1"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="3dp"
            />

        <CheckBox
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:id="@+id/isfc_folbangdingline_line2cb1"
            android:layout_below="@+id/isfc_folbangdingline_line1tl1"
            android:layout_toEndOf="@+id/isfc_folbangdingline_line2sp1"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            />


    </RelativeLayout>


</RelativeLayout>
