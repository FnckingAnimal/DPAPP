<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="机台编号："
        android:gravity="center_vertical"
        android:id="@+id/eqbasedata_machineno_tv1" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:id="@+id/eqbasedata_machineno_text1"
        android:text="XXXXXXXX"
        android:layout_toEndOf="@+id/eqbasedata_machineno_tv1" >
    </TextView>


    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="机别："
        android:gravity="center_vertical"
        android:layout_below="@+id/eqbasedata_machineno_tv1"
        android:id="@+id/eqbasedata_machinetype_tv1" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:id="@+id/eqbasedata_machinetyp_text1"
        android:text="XXXXXXXX"
        android:layout_below="@+id/eqbasedata_machineno_text1"
        android:layout_toEndOf="@+id/eqbasedata_machinetype_tv1" >

    </TextView>


    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="资产编号："
        android:gravity="center_vertical"
        android:layout_below="@+id/eqbasedata_machinetype_tv1"
        android:id="@+id/eqbasedata_assid_tv1" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:id="@+id/eqbasedata_assid_text1"
        android:text="XXXXXXXX"
        android:layout_below="@+id/eqbasedata_machinetyp_text1"
        android:layout_toEndOf="@+id/eqbasedata_assid_tv1" >

    </TextView>

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="创建"
        android:id="@+id/eqbasedata_createlink_bt1"
        android:background="@drawable/btn_dl"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_below="@+id/eqbasedata_machinetyp_text1"
        android:layout_toEndOf="@+id/eqbasedata_assid_text1"
        android:layout_marginLeft="1dp"
        android:onClick="createnewlinkdata"
         />

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="栋别车间："
        android:gravity="center_vertical"
        android:layout_below="@+id/eqbasedata_assid_tv1"
        android:id="@+id/eqbasedata_shop_tv1" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:id="@+id/eqbasedata_shop_text1"
        android:text="XXXXXXXX"
        android:layout_below="@+id/eqbasedata_assid_text1"
        android:layout_toEndOf="@+id/eqbasedata_shop_tv1" >

    </TextView>

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="线体："
        android:gravity="center_vertical"
        android:layout_below="@+id/eqbasedata_shop_tv1"
        android:id="@+id/eqbasedata_line_tv1" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:id="@+id/eqbasedata_line_text1"
        android:text="XXXXXXXX"
        android:layout_below="@+id/eqbasedata_shop_text1"
        android:layout_toEndOf="@+id/eqbasedata_line_tv1" >

    </TextView>


    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="线体："
        android:gravity="center_vertical"
        android:layout_below="@+id/eqbasedata_line_tv1"
        android:id="@+id/eqbasedata_ip_tv1" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:id="@+id/eqbasedata_ip_text1"
        android:text="XXXXXXXX"
        android:layout_below="@+id/eqbasedata_line_text1"
        android:layout_toEndOf="@+id/eqbasedata_ip_tv1" >

    </TextView>



</RelativeLayout>
