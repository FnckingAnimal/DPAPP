<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="日期:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/tv_test_date"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/tv_test_date_t"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="责任人工号:"
            android:numeric="integer"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/tv_test_number"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/tv_test_number_t"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:background="#ffffff" />

        <TextView
            android:layout_marginLeft="16dp"
            android:id="@+id/tv_test_commit"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="確認"
            android:textSize="20sp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="责任人姓名:"
            android:numeric="integer"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/tv_test_name"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/tv_test_name_t"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:background="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="项目:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/tv_test_xiangmu"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true"/>

        <Spinner
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/sp_test_xiangmu"
            android:textIsSelectable="false"
            android:layout_alignParentTop="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="核查人:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/tv_test_man"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true"/>

        <Spinner
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/sp_test_man"
            android:textIsSelectable="false"
            android:layout_alignParentTop="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="稽核站位:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/tv_test_test"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/tv_test_test_t"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:background="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="缺失描述:"
            android:numeric="integer"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/tv_test_missing"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/tv_test_missing_t"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:background="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="缺失类别:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/tv_test_category"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true"/>

        <Spinner
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/sp_test_category"
            android:textIsSelectable="false"
            android:layout_alignParentTop="true"/>
    </LinearLayout>



    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="改善措施:"
        android:numeric="integer"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:id="@+id/tv_test_measure"
        android:textSize="20sp"
        android:textIsSelectable="false"
        android:layout_alignParentStart="true"    />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/tv_test_measure_t"
        android:textSize="20sp"
        android:textIsSelectable="false"
        android:background="#ffffff"   />
</LinearLayout>

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="提交"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/bt_test_commit"
        android:textSize="20dp"
        android:background="@drawable/btn_dl"
        android:textIsSelectable="false" >
    </Button>

    <!--<ListView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/pys_lv"></ListView>-->
</LinearLayout>
