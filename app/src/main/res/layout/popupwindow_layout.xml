<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f81be"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_popupwindow_machineid"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="機台號:"
            android:textColor="#FFE5E5ED"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_unusual_machineid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#08080d"
            android:textIsSelectable="false"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_popupwindow_deviceno"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="機種:"
            android:textColor="#FFE5E5ED"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_popupwondow_deviceno"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="#ffffff"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#08080d"
            android:textIsSelectable="false"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_popupwindow_time"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="時間段:"
            android:textColor="#FFE5E5ED"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_popupwindow_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="#ffffff"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#08080d"
            android:textIsSelectable="false"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_popupwindow_unusual"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="異常現象:"
            android:textColor="#FFE5E5ED"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_popupwindow_unusual"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="#ffffff"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#08080d"
            android:textIsSelectable="false"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_popupwindow_engineer"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="工程師:"
            android:textColor="#FFE5E5ED"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_upopupwindow_engineer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="#ffffff"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#08080d"
            android:textIsSelectable="false"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_popupwindow_createid"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="創建人:"
            android:textColor="#FFE5E5ED"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_popupwindow_createid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="#ffffff"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#08080d"
            android:textIsSelectable="false"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_popupwindow_createtimer"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="創建時間:"
            android:textColor="#FFE5E5ED"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_popupwindow_createtime"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="#ffffff"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#08080d"
            android:textIsSelectable="false"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="開始時間:"
            android:textColor="#FFE5E5ED"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_popupwindow_starttime"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="#ffffff"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#08080d"
            android:textIsSelectable="false"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="結束時間:"
            android:textColor="#FFE5E5ED"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_popupwindow_endtime"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="#ffffff"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#08080d"
            android:textIsSelectable="false"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_popupwindow_createtime"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textColor="#FFE5E5ED"
            android:textIsSelectable="false"
            android:textSize="15sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/bt_unusual_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_dl"
            android:gravity="center"
            android:text="確定"
            android:textColor="#08080d"
            android:textIsSelectable="false"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>
