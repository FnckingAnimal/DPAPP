<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context=".Repair.eqrepairexec">

    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="SysID："
        android:gravity="center_vertical"
        android:id="@+id/eqrepairexec_tv1"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"/>

    <TextView
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="SysID："
        android:gravity="center_vertical"
        android:id="@+id/eqrepairexec_eqid"
        android:textSize="16dp"
        android:textIsSelectable="false"

        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/eqrepairexec_tv1"
        android:layout_marginTop="3dp"
        />


    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="设备名称："
        android:id="@+id/eqrepairexec_tv2"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eqrepairexec_tv1"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="设备名称："
        android:id="@+id/eqrepairexec_eqname"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textIsSelectable="false"

        android:layout_toEndOf="@+id/eqrepairexec_tv2"
        android:layout_below="@+id/eqrepairexec_tv1"
        android:layout_marginTop="3dp"
        />


    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="所屬線體："
        android:id="@+id/eqrepairexec_tv3"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eqrepairexec_tv2"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/eqrepairexec_eqline"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textIsSelectable="false"

        android:layout_toEndOf="@+id/eqrepairexec_tv3"
        android:layout_below="@+id/eqrepairexec_tv2"
        android:layout_marginTop="3dp"
        />


    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="所屬站位："
        android:id="@+id/eqrepairexec_tv4"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eqrepairexec_eqline"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/eqrepairexec_eqop"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textIsSelectable="false"

        android:layout_toEndOf="@+id/eqrepairexec_tv4"
        android:layout_below="@+id/eqrepairexec_eqline"
        android:layout_marginTop="3dp"
        />
    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="膠閥編號："
        android:id="@+id/eqrepairexec_tvufno"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eqrepairexec_tv4"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/eqrepairexec_equfno"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textIsSelectable="false"

        android:layout_toEndOf="@+id/eqrepairexec_tvufno"
        android:layout_below="@+id/eqrepairexec_eqop"
        android:layout_marginTop="3dp"
        />
    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="報修原因："
        android:id="@+id/eqrepairexec_tv6"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eqrepairexec_tvufno"
        android:layout_marginTop="3dp"
        />

    <Spinner
        android:id="@+id/eqrepairexec_starterrorcodesp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/eqrepairexec_equfno"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/eqrepairexec_tv6"

        android:gravity="center_vertical"
        android:textIsSelectable="false"
        android:textSize="16dp"></Spinner>


    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="Exec"
        android:id="@+id/eqrepairexec_execbutton"
        android:background="@drawable/btn_dl"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_below="@+id/eqrepairexec_equfno"
        android:layout_toEndOf="@+id/eqrepairexec_starterrorcodesp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:onClick="submitionclick"/>


</RelativeLayout>
