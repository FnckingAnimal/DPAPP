<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/listviewdefectinputmname1"
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:background="#abf6a8"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        />
    <TextView
        android:id="@+id/listviewdefectinputmname2"
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="#e8efaf"
        android:textAlignment="center"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_toEndOf="@+id/lisrviewexpendsourceMname1"
        />
    <EditText
        android:id="@+id/listviewdefectinputmname3"
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="#a5dc88"
        android:textAlignment="center"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_toEndOf="@+id/lisrviewexpendsourceMname2"
        />
</LinearLayout>