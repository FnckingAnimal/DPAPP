<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/Mnametext1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:background="#abf6a8"
        android:textSize="15sp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="1dp"
        />



        <TextView
            android:id="@+id/Mdatetext1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:background="#eae583"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/Mnametext1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />
    <TextView
        android:id="@+id/listview_source1_userdept1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:background="#b3ad9f"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/Mdatetext1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="1dp"
        />

    <TextView
        android:id="@+id/listview_source1_opname1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:background="#abe9af"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/listview_source1_userdept1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="1dp"
        />

    <TextView
        android:id="@+id/listview_source1_linename1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:background="#cfb863"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/listview_source1_opname1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="1dp"
        />
    <TextView
        android:id="@+id/listview_source1_checkmold1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:background="#c000ff00"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/listview_source1_linename1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="1dp"
        />
    <TextView
        android:id="@+id/listview_source1_checkdeviceno"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:background="#c0ffff00"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/listview_source1_checkmold1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="1dp"
        />
        <Button
            android:id="@+id/Mstatus1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/listview_source1_checkmold1"
            android:background="@drawable/btn_ins"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />
</LinearLayout>