<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context=".IncludingSFC.controllotnopage">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/isfc_controllotnopage_headerrl1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#bec4bf"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5067c6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/isfc_controllotnopage_headerll1"
            >
            <TextView
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:text="生產批資訊:"
                android:gravity="center_vertical"
                android:id="@+id/isfc_controllotnopage_mainlabelheader"
                android:textSize="20dp"
                android:textIsSelectable="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:textColor="#ffffff"
                ></TextView>

            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="提交"
                android:id="@+id/isfc_controllotnopage_submitbt"
                android:background="@drawable/btn_dl"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/isfc_controllotnopage_mainlabelheader"
                android:layout_marginLeft="20dp"
                android:onClick="setButton_submit"/>


        </LinearLayout>

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="批號:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/isfc_controllotnopage_lotnotbl1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_controllotnopage_headerll1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="XXXXXXXX"
            android:gravity="center_vertical"
            android:id="@+id/isfc_controllotnopage_lotnotbv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_controllotnopage_headerll1"
            android:layout_toEndOf="@+id/isfc_controllotnopage_lotnotbl1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="站位:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/isfc_controllotnopage_opnotbl1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_controllotnopage_headerll1"
            android:layout_toEndOf="@+id/isfc_controllotnopage_lotnotbv1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="XXXXXXXX"
            android:gravity="center_vertical"
            android:id="@+id/isfc_controllotnopage_opnotbv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_controllotnopage_headerll1"
            android:layout_toEndOf="@+id/isfc_controllotnopage_opnotbl1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />

        <EditText
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:text=""
            android:gravity="center_vertical"
            android:id="@+id/isfc_controllotnopage_richtextBoxinfoet1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:textAlignment="center"
            android:layout_below="@+id/isfc_controllotnopage_lotnotbl1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="33dp"
            android:background="#ffffff"
            />
    </RelativeLayout>

</RelativeLayout>