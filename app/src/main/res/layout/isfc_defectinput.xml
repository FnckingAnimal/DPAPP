<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:padding="16dp"
tools:context=".IncludingSFC.defectinput">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:id="@+id/isfc_defectinput_headerrl1"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:background="#bec4bf"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5067c6"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/isfc_defectinput_headerll1"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:text="生產批資訊:"
            android:gravity="center_vertical"
            android:id="@+id/isfc_defectinput_mainlabelheader"
            android:textSize="22dp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:textColor="#ffffff"
            ></TextView>

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="提交"
            android:id="@+id/isfc_defectinput_submitbt"
            android:background="@drawable/btn_dl"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/isfc_defectinput_mainlabelheader"
            android:layout_marginLeft="20dp"
            android:onClick="submitbt"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="Clear"
            android:id="@+id/isfc_defectinput_clearbt"
            android:background="@drawable/btn_dl"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/isfc_defectinput_submitbt"
            android:layout_marginLeft="20dp"
            android:onClick="buttonclear_Click"/>
    </LinearLayout>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="生產批批號:"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:id="@+id/isfc_defectinput_lotnotbl1"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/isfc_defectinput_headerll1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="XXXXXXXX"
        android:gravity="center_vertical"
        android:id="@+id/isfc_defectinput_lotnotbv1"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/isfc_defectinput_headerll1"
        android:layout_toEndOf="@+id/isfc_defectinput_lotnotbl1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="當前站位:"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:id="@+id/isfc_defectinput_opnotbl1"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/isfc_defectinput_headerll1"
        android:layout_toEndOf="@+id/isfc_defectinput_lotnotbv1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="XXXXXXXX"
        android:gravity="center_vertical"
        android:id="@+id/isfc_defectinput_opnotbv1"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/isfc_defectinput_headerll1"
        android:layout_toEndOf="@+id/isfc_defectinput_opnotbl1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="數量:"
        android:gravity="center_vertical"
        android:id="@+id/isfc_defectinput_defectqtyl1"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/isfc_defectinput_headerll1"
        android:layout_toEndOf="@+id/isfc_defectinput_opnotbv1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="XXXXXXXX"
        android:gravity="center_vertical"
        android:id="@+id/isfc_defectinput_defectqtytv1"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/isfc_defectinput_headerll1"
        android:layout_toEndOf="@+id/isfc_defectinput_defectqtyl1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        />
</RelativeLayout>

<!-- 備平資料選擇區-->
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="510dp"
    android:id="@+id/isfc_defectinput_stationprl1"
    android:layout_below="@+id/isfc_defectinput_headerrl1"
    android:layout_alignParentStart="true"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:background="#bec4bf"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5067c6"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/isfc_defectinput_stationpll1"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:text="不良原因輸入："
            android:gravity="center_vertical"
            android:id="@+id/isfc_defectinput_stationptl1"
            android:textSize="22dp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:textColor="#ffffff"
            ></TextView>
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:id="@+id/isfc_defectinput_stationpheaderll1"
        android:layout_below="@+id/isfc_defectinput_stationpll1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
        <TextView
            android:id="@+id/isfc_defectinput_stationpheadertvl1"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:background="#abf6a8"
            android:textSize="20sp"
            android:text="不良代碼"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />
        <TextView
            android:id="@+id/isfc_defectinput_stationpheadertvl2"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="不良名稱"
            android:textAlignment="center"
            android:background="#e8efaf"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            android:layout_toEndOf="@+id/isfc_defectinput_stationpheadertvl1"
            />
        <TextView
            android:id="@+id/isfc_defectinput_stationpheadertvl3"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="輸入值"
            android:textAlignment="center"
            android:background="#a5dc88"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            android:layout_toEndOf="@+id/isfc_defectinput_stationpheadertvl2"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isfc_defectinput_stationpheaderll1"
        android:id="@+id/scrollView">
        <LinearLayout
            android:id="@+id/isfc_defectinput_stationviewll1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            >

        </LinearLayout>
    </ScrollView>

</RelativeLayout>


</RelativeLayout>

