<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="app.dpapp.E4SFC.e4devicenomap">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#bec4bf"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_deviceno"
            android:background="#5067c6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="機種選擇"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#ffffff"
                >

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_deviceno"
            android:gravity="center"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="機種:"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:textIsSelectable="false"
                android:layout_alignParentStart="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                />

            <Spinner
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="XXXXXXXX"
                android:gravity="center_vertical"
                android:id="@+id/sp_deviceno"
                android:textSize="16dp"
                android:textIsSelectable="false"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                />

            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="进入"
                android:id="@+id/bt_deviceno_submit"
                android:background="@drawable/btn_dl"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:onClick="btsubmit_Click"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
