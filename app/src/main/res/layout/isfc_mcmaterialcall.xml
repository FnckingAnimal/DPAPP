<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:ignore="RtlCompat"
    tools:context=".IncludingSFC.mcmaterialcall">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/isfc_mamaterialcall_hrl"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#bec4bf">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5067c6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/isfc_mamaterialcall_hll1">

            <TextView
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:text="設備信息區："
                android:gravity="center_vertical"
                android:id="@+id/isfc_mamaterialcall_htv1"
                android:textSize="20dp"
                android:textIsSelectable="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:textColor="#ffffff"></TextView>
        </LinearLayout>

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="SYS   ID:"
            android:gravity="center_vertical"
            android:id="@+id/isfc_mamaterialcall_eqsysidtv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:textAlignment="center"
            android:layout_below="@+id/isfc_mamaterialcall_hll1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="XXXXXXX"
            android:gravity="center_vertical"
            android:id="@+id/isfc_mamaterialcall_eqsysidlabel1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_mamaterialcall_hll1"
            android:layout_toEndOf="@+id/isfc_mamaterialcall_eqsysidtv1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="設備名稱:"
            android:gravity="center_vertical"
            android:id="@+id/isfc_mamaterialcall_eqsysnametv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:textAlignment="center"
            android:layout_below="@+id/isfc_mamaterialcall_eqsysidtv1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:id="@+id/isfc_mamaterialcall_eqsysnamelabel1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_mamaterialcall_eqsysidtv1"
            android:layout_toEndOf="@+id/isfc_mamaterialcall_eqsysnametv1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="提交"
            android:id="@+id/isfc_mamaterialcall_mcallbt1"
            android:background="@drawable/btn_dl"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_below="@+id/isfc_mamaterialcall_hll1"
            android:layout_toEndOf="@+id/isfc_mamaterialcall_eqsysidlabel1"
            android:layout_marginLeft="1dp"
            android:onClick="isfc_mamaterialcall_onsubmit" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="900dp"
        android:id="@+id/isfc_mamaterialcall_datachoosearearl"
        android:layout_below="@+id/isfc_mamaterialcall_hrl"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#bec4bf">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5067c6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/isfc_mamaterialcall_datachooseareall1">

            <TextView
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:text="資料錄入區："
                android:gravity="center_vertical"
                android:id="@+id/isfc_mamaterialcall_datachooseareatv1"
                android:textSize="20dp"
                android:textIsSelectable="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:textColor="#ffffff"></TextView>
        </LinearLayout>

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="批    號:"
            android:gravity="center_vertical"
            android:id="@+id/isfc_mamaterialcall_lotnotv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:textAlignment="center"
            android:layout_below="@+id/isfc_mamaterialcall_datachooseareall1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:onClick="onscanclick" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text=""
            android:gravity="center_vertical"
            android:id="@+id/isfc_mamaterialcall_lotnoet1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_mamaterialcall_datachooseareall1"
            android:layout_toEndOf="@+id/isfc_mamaterialcall_lotnotv1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp" />


        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="掃描"
            android:id="@+id/isfc_mamaterialcall_mscanbt1"
            android:background="@drawable/btn_dl"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_below="@+id/isfc_mamaterialcall_datachooseareall1"
            android:layout_toEndOf="@+id/isfc_mamaterialcall_lotnoet1"
            android:layout_marginLeft="15dp"
            android:onClick="onscanclick" />


        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="選擇機種:"
            android:gravity="center_vertical"
            android:id="@+id/isfc_mamaterialcall_devicenotv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:textAlignment="center"
            android:layout_below="@+id/isfc_mamaterialcall_lotnotv1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp" />

        <Spinner
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/isfc_mamaterialcall_devicenosp1"
            android:gravity="center_vertical"
            android:layout_below="@+id/isfc_mamaterialcall_lotnotv1"
            android:layout_toEndOf="@+id/isfc_mamaterialcall_devicenotv1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp" />


        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="物料名稱:"
            android:gravity="center_vertical"
            android:id="@+id/isfc_mamaterialcall_materialnametv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:textAlignment="center"
            android:layout_below="@+id/isfc_mamaterialcall_devicenotv1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp" />


        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:enabled="false"
            android:background="@null"
            android:text=""
            android:gravity="center_vertical"
            android:id="@+id/isfc_mamaterialcall_materialnameet1"
            android:textSize="16dp"
            android:textColor="#000000"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_mamaterialcall_devicenosp1"
            android:layout_toEndOf="@+id/isfc_mamaterialcall_materialnametv1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="物料料號:"
            android:gravity="center_vertical"
            android:id="@+id/isfc_mamaterialcall_materialidtv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:textAlignment="center"
            android:layout_below="@+id/isfc_mamaterialcall_materialnametv1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp" />

        <Spinner
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/isfc_mamaterialcall_materialidsp1"
            android:gravity="center_vertical"
            android:layout_below="@+id/isfc_mamaterialcall_materialnameet1"
            android:layout_toEndOf="@+id/isfc_mamaterialcall_materialidtv1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp" />


        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="輸入數量:"
            android:gravity="center_vertical"
            android:id="@+id/isfc_mamaterialcall_qtytv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:textAlignment="center"
            android:layout_below="@+id/isfc_mamaterialcall_materialidtv1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text=""
            android:gravity="center_vertical"
            android:id="@+id/isfc_mamaterialcall_qtyet1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_mamaterialcall_materialidsp1"
            android:layout_toEndOf="@+id/isfc_mamaterialcall_qtytv1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:background="#ffffff" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text=""
            android:gravity="center_vertical"
            android:id="@+id/isfc_mamaterialcall_uniltv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_mamaterialcall_materialidsp1"
            android:layout_toEndOf="@+id/isfc_mamaterialcall_qtyet1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp" />


    </RelativeLayout>
</RelativeLayout>
