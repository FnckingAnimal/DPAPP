<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context=".machinecheck.machine_offline">
    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="部門："
        android:gravity="center_vertical"
        android:id="@+id/N2text"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/D1spinner"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/N2text" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="樓層："
        android:gravity="center_vertical"
        android:id="@+id/N3text"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/D1spinner"/>

    <Spinner
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/D2spinner"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/N3text" />



    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="查詢"
        android:id="@+id/searchbutton"
        android:background="@drawable/btn_dl"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_toEndOf="@+id/D2spinner"
        android:layout_marginLeft="1dp"
        android:onClick="eqchecklistbt1onclick"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="離線"
        android:id="@+id/offlinebutton"
        android:background="@drawable/btn_dl"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_toEndOf="@+id/searchbutton"
        android:layout_marginLeft="1dp"
        android:onClick="offlinesavatempdata"/>
    <!--<ScrollView-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_below="@+id/N2text">-->

        <!--<LinearLayout-->
            <!--android:id="@+id/eqchecklistLinearLayout1"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical"-->
            <!-->-->
        <!--</LinearLayout>-->

    <!--</ScrollView>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_function_below"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/N2text"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_output_machineid_two"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#abf6a8"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="機台編號"
            android:layout_marginLeft="1dp"
            />
        <TextView
            android:id="@+id/tv_output_weight_two"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#e8efaf"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="機台號"
            android:layout_marginLeft="1dp"
            />
        <TextView
            android:id="@+id/tv_output_stye"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#a5dc88"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="機台類型"
            android:layout_marginLeft="1dp"
            />
        <TextView
            android:id="@+id/tv_output_time_bottom"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#cfcbc1"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="SHOPNO"
            android:layout_marginLeft="1dp"
            />
        <TextView
            android:id="@+id/tv_output_out"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#f7d37e"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="區域"
            android:layout_marginLeft="1dp" />
        <TextView
            android:id="@+id/tv_output_pihao"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#e7ef77"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="文件"
            android:layout_marginLeft="1dp" />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_function_below"
        android:id="@+id/lv_offline"
        android:layout_height="wrap_content"></ListView>

</RelativeLayout>