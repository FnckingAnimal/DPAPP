<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/eq_checkreportllistheader_ll"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/eq_checkreportlistheader_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:background="#abf6a8"
            android:textSize="13sp"
            android:text="設備名稱"/>
        <TextView
            android:id="@+id/eq_checkreportlistheader_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="13sp"
            android:text="當前狀態"
            android:background="#e8efaf" />
        <TextView
            android:id="@+id/eq_checkreportlistheader_8"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="13sp"
            android:text="機種"
            android:background="#b5be89" />

        <TextView
            android:id="@+id/eq_checkreportlistheader_3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="13sp"
            android:text="站位"
            android:background="#a5dc88"/>
        <TextView
            android:id="@+id/eq_checkreportlistheader_4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="13sp"
            android:text="線體"
            android:textAlignment="center"
            android:background="#cfcbc1"/>
        <TextView
            android:id="@+id/eq_checkreportlistheader_9"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="13sp"
            android:text="点检模式"
            android:background="#c000ff00" />

        <TextView
            android:id="@+id/eq_checkreportlistheader_6"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="13sp"
            android:text="發起時間"
            android:background="#f7d37e"/>

        <TextView
            android:id="@+id/eq_checkreportlistheader_7"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:text="更新時間"
            android:background="#84f4d1" />

        <TextView
            android:id="@+id/eq_checkreportlistheader_5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_toEndOf="@+id/eq_checkreportlistheader7"
            android:background="#cbff6b"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:text="表單標號" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_checkre"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
