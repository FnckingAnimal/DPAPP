<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="信息掃描區:"
        android:textColor="#FF0915BA"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="5.6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="批号："
            android:textAlignment="center"
            android:textColor="@color/contents_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_lotno"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_weight="1.8"
            android:background="@drawable/bt_drawline"
            android:gravity="center"
            android:hint="点击掃描批号"
            android:textIsSelectable="false"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="5.6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="位置："
            android:textAlignment="center"
            android:textColor="@color/contents_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_weight="1.8"
            android:background="@drawable/bt_drawline"
            android:gravity="center"
            android:hint="点击掃描位置"
            android:textIsSelectable="false"
            android:textSize="15sp" />
        <Button
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.8"
            android:background="@drawable/btn_dl"
            android:textSize="15sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="提交"
            android:visibility="invisible"
            android:layout_weight="1"
            android:id="@+id/bt_commit"
            android:background="@drawable/btn_dl"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="信息展示區:"
        android:textColor="#FF0915BA"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="#abf6a8"
            android:gravity="center"
            android:text="批号"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="#cfcbc1"
            android:gravity="center"
            android:text="位置"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="#ececa1"
            android:gravity="center"
            android:text="人员"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="#e99999"
            android:gravity="center"
            android:text="时间"
            android:textColor="#000000"
            android:textSize="15sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_shelf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />
</LinearLayout>