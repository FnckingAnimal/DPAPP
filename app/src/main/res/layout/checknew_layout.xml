<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="#bec4bf"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="類型:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/tv_check_type"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <Spinner
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/sp_check_type"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="選擇日期"
            android:background="@drawable/btn_dl"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/bt_check_date"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/tv_check_date"
            android:textSize="20sp"
            android:background="#ffffff"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="區域:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/tv_check_area"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <Spinner
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/sp_check_area"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="機種:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/tv_check_machineno"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <Spinner
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/sp_check_machineno"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="線體:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/tv_check_line"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <Spinner
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/sp_check_line"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="查詢"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/bt_check_check"
            android:textSize="20sp"
            android:background="@drawable/btn_dl"
            android:textIsSelectable="false"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            ></Button>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_function_below"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_check_floor"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#abf6a8"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="部門"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />
        <TextView
            android:id="@+id/tv_check_line_two"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FFCEA8F6"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="線體"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />
        <TextView
            android:id="@+id/tv_check_machine"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#f7d37e"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="機台號"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />
        <TextView
            android:id="@+id/tv_check_deviceno"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#5067c6"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="機種"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />
        <TextView
            android:id="@+id/tv_check_excelname"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FFC650BA"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="表單號"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp" />
        <TextView
            android:id="@+id/tv_check_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FF50C6BA"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="更新時間"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp" />
        <TextView
            android:id="@+id/tv_check_update"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FF9FC650"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="點檢編號"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp" />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_check"
        >
    </ListView>

</LinearLayout>
