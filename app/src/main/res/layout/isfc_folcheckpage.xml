<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".IncludingSFC.folcheckpage">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/isfc_folcheckpage_headerrl1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#bec4bf"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5067c6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/isfc_folcheckpage_headerll1"
            >
            <TextView
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:text="生產批資訊:"
                android:gravity="center_vertical"
                android:id="@+id/isfc_folcheckpage_mainlabelheader"
                android:textSize="20dp"
                android:textIsSelectable="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:textColor="#ffffff"
                ></TextView>

            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="提交"
                android:id="@+id/isfc_folcheckpage_submitbt"
                android:background="@drawable/btn_dl"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/isfc_folcheckpage_mainlabelheader"
                android:layout_marginLeft="20dp"
                android:onClick="submitbt"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="提交"
                android:id="@+id/isfc_folcheckpage_clearbt"
                android:background="@drawable/btn_dl"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/isfc_folcheckpage_submitbt"
                android:layout_marginLeft="20dp"
                android:onClick="submitbt"/>
        </LinearLayout>

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="生產批批號:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/isfc_folcheckpage_lotnotbl1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folcheckpage_headerll1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="XXXXXXXX"
            android:gravity="center_vertical"
            android:id="@+id/isfc_folcheckpage_lotnotbv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folcheckpage_headerll1"
            android:layout_toEndOf="@+id/isfc_folcheckpage_lotnotbl1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="當前站位:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/isfc_folcheckpage_opnotbl1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folcheckpage_headerll1"
            android:layout_toEndOf="@+id/isfc_folcheckpage_lotnotbv1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="XXXXXXXX"
            android:gravity="center_vertical"
            android:id="@+id/isfc_folcheckpage_opnotbv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folcheckpage_headerll1"
            android:layout_toEndOf="@+id/isfc_folcheckpage_opnotbl1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="當前站位:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/isfc_folcheckpage_opnametbl1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folcheckpage_lotnotbl1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="XXXXXXXX"
            android:gravity="center_vertical"
            android:id="@+id/isfc_folcheckpage_opnametbv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folcheckpage_lotnotbl1"
            android:layout_toEndOf="@+id/isfc_folcheckpage_opnametbl1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="數量:"
            android:gravity="center_vertical"
            android:id="@+id/isfc_folcheckpage_defectqtyl1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folcheckpage_lotnotbl1"
            android:layout_toEndOf="@+id/isfc_folcheckpage_opnametbv1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="XXXXXXXX"
            android:gravity="center_vertical"
            android:id="@+id/isfc_folcheckpage_qtytv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folcheckpage_lotnotbl1"
            android:layout_toEndOf="@+id/isfc_folcheckpage_defectqtyl1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/isfc_folcheckpage_detatilrl1"
        android:layout_below="@+id/isfc_folcheckpage_headerrl1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#bec4bf"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5067c6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/isfc_folcheckpage_d2headerll1"
            >
            <TextView
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:text="生產批資訊:"
                android:gravity="center_vertical"
                android:id="@+id/isfc_folcheckpage_d2mainlabelheader"
                android:textSize="20dp"
                android:textIsSelectable="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:textColor="#ffffff"
                ></TextView>

        </LinearLayout>

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="生產批批號:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/isfc_folcheckpage_checkqtytbl1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folcheckpage_d2headerll1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="XXXXXXXX"
            android:gravity="center_vertical"
            android:id="@+id/isfc_folcheckpage_checkqtytbv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folcheckpage_d2headerll1"
            android:layout_toEndOf="@+id/isfc_folcheckpage_checkqtytbl1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="當前站位:"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/isfc_folcheckpage_checkngqtytbl1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folcheckpage_d2headerll1"
            android:layout_toEndOf="@+id/isfc_folcheckpage_checkqtytbv1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="XXXXXXXX"
            android:gravity="center_vertical"
            android:id="@+id/isfc_folcheckpage_checkngqtytbv1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_folcheckpage_d2headerll1"
            android:layout_toEndOf="@+id/isfc_folcheckpage_checkngqtytbl1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="具體不良輸入"
            android:id="@+id/isfc_folcheckpage_folcheckngbt"
            android:background="@drawable/btn_dl"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_below="@+id/isfc_folcheckpage_d2headerll1"
            android:layout_toEndOf="@+id/isfc_folcheckpage_checkngqtytbv1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:onClick="submitbt"/>


    </RelativeLayout>
    <!-- 備平資料選擇區-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="610dp"
        android:id="@+id/isfc_folcheckpage_stationprl1"
        android:layout_below="@+id/isfc_folcheckpage_detatilrl1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#bec4bf"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5067c6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/isfc_folcheckpage_stationpll1"
            >
            <TextView
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:text="不良原因輸入："
                android:gravity="center_vertical"
                android:id="@+id/isfc_folcheckpage_stationptl1"
                android:textSize="20dp"
                android:textIsSelectable="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:textColor="#ffffff"
                ></TextView>
        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:id="@+id/isfc_folcheckpage_stationpheaderll1"
            android:layout_below="@+id/isfc_folcheckpage_stationpll1"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:id="@+id/isfc_folcheckpage_stationpheadertvl1"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:background="#abf6a8"
                android:textSize="15sp"
                android:text="不良代碼"
                android:textAlignment="center"
                android:layout_alignParentStart="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="1dp"
                />
            <TextView
                android:id="@+id/isfc_folcheckpage_stationpheadertvl2"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="不良名稱"
                android:textAlignment="center"
                android:background="#e8efaf"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="1dp"
                android:layout_toEndOf="@+id/isfc_folcheckpage_stationpheadertvl1"
                />
            <TextView
                android:id="@+id/isfc_folcheckpage_stationpheadertvl3"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="輸入值"
                android:textAlignment="center"
                android:background="#a5dc88"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="1dp"
                android:layout_toEndOf="@+id/isfc_folcheckpage_stationpheadertvl2"
                />
        </LinearLayout>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/isfc_folcheckpage_stationpll1">
            <LinearLayout
                android:id="@+id/isfc_folcheckpage_stationviewll1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:orientation="vertical"
                >
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</RelativeLayout>
