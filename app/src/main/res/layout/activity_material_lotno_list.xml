<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".material.MaterialLotnoListActivity"
    tools:ignore="RtlCompat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="機種："
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="14sp" />


        <Spinner
            android:id="@+id/material_lotno_list_sp_materialdeviceno"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="段別："
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/material_lotno_list_sp_materialshopno"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="物料料號："
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/material_lotno_list_sp_productno"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:gravity="center_vertical"></Spinner>

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="物料架："
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/material_lotno_list_sp_materiajiano"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:gravity="center_vertical"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="數量："
                android:textAlignment="center"
                android:textIsSelectable="false"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/material_lotno_list_et_count"
                android:enabled="false"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_dl"
                    android:onClick="material_lotno_list_onclick_query"
                    android:text="查詢"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F0E68C"
                android:gravity="center"
                android:text="機種"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#abf6a8"
                android:gravity="center"
                android:text="段別"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#cfcbc1"
                android:gravity="center"
                android:text="物料料號"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#a5dc88"
                android:gravity="center"
                android:text="物料架"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#efcbc1"
                android:gravity="center"
                android:text="批号"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#9bbe89"
                android:gravity="center"
                android:text="数量"
                android:textColor="#000000"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#87CEFA"
                android:gravity="center"
                android:text="時間"
                android:textColor="#000000"
                android:textSize="13sp" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/material_lotno_ll_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>