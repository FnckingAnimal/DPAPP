<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context=".machinecheck.eqchecktask"
    tools:ignore="RtlCompat">

    <TextView
        android:id="@+id/N2text"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="機種:"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="12dp" />

    <Spinner
        android:id="@+id/D1spinner"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/N2text"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/N1text"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/D1spinner"
        android:gravity="center_vertical"
        android:text="區域:"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="12dp"/>

    <Spinner
        android:id="@+id/D2spinner"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/N1text"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/N4text"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/N2text"
        android:gravity="center_vertical"

        android:text="站位"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="12dp"/>

    <Spinner
        android:id="@+id/D4spinner"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/D1spinner"
        android:layout_toEndOf="@+id/N4text"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/N3text"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/N1text"
        android:layout_toEndOf="@+id/D4spinner"
        android:gravity="center_vertical"
        android:text="線體:"
        android:visibility="invisible"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="12dp"/>

    <Spinner
        android:visibility="invisible"
        android:id="@+id/D3spinner"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_below="@+id/D2spinner"
        android:layout_toEndOf="@+id/N3text"
        android:gravity="center_vertical" />

    <Button
        android:id="@+id/eq_checklistbutton1"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/N1text"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/D3spinner"
        android:background="@drawable/btn_dl"
        android:gravity="center_vertical"
        android:text="查詢"
        android:textAlignment="center"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/eqchecktaskll11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/N3text">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eqchecktaskheader_Mnametext1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="#abf6a8"
                android:gravity="center_vertical"
                android:text="機臺名稱"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/eqchecktaskheader_Mdevicetext1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/ls8_Mnametext1"
                android:layout_weight="1"
                android:background="#c0cec0"
                android:gravity="center_vertical"
                android:text="機種"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/eqchecktaskheader_Mdatetext1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/ls8_Mdevicetext1"
                android:layout_weight="1.8"
                android:background="#eae583"
                android:gravity="center_vertical"
                android:text="點檢編號"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/eqchecktaskheader_userdept1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/ls8_Mdatetext1"
                android:layout_weight="1"
                android:background="#b3ad9f"
                android:gravity="center_vertical"
                android:text="部門"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/eqchecktaskheader_opname1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/ls8_userdept1"
                android:layout_weight="1"
                android:background="#abe9af"
                android:gravity="center_vertical"
                android:text="站位"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/eqchecktaskheader_linename1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/listview_source1_opname1"
                android:layout_weight="1"
                android:background="#cfb863"
                android:gravity="center_vertical"
                android:text="線體"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/eqchecktaskheader_checkmold"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/eqchecktaskheader_linename1"
                android:layout_weight="1"
                android:background="#c000ff00"
                android:gravity="center_vertical"
                android:text="点检模式"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/eqchecktaskheader_number"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/eqchecktaskheader_linename1"
                android:layout_weight="1.2"
                android:background="#c06e6527"
                android:gravity="center_vertical"
                android:text="表單號"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_dianjian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/eqchecktaskll11"
        android:layout_marginTop="5dp"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/lv_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/eqchecktaskll11"
        android:layout_marginTop="5dp"
        android:visibility="gone"/>
</RelativeLayout>
