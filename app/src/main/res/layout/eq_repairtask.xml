<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".machinecheck.eqchecktask">

    <LinearLayout
        android:id="@+id/eqrepairtaskll11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <TextView
            android:id="@+id/eqrepairtaskheader_calltimetext1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:background="#b3ad9f"
            android:padding="1pt"
            android:textSize="15sp"
            android:text="報修時間"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"

            />
        <TextView
            android:id="@+id/eqrepairtaskheader_callusertext1"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="#000000"
            android:background="#b3ad9f"
            android:padding="1pt"
            android:textSize="15sp"
            android:text="報修人"
            android:layout_toEndOf="@+id/eqrepairtaskheader_calltimetext1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />



        <TextView
            android:id="@+id/eqrepairtaskheader_machinenametext1"
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:background="#b3ad9f"
            android:padding="1pt"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="機臺編號"
            android:layout_toEndOf="@+id/eqrepairtaskheader_callusertext1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />
        <TextView
            android:id="@+id/eqrepairtaskheader_statustext1"
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:background="#b3ad9f"
            android:padding="1pt"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="狀態"
            android:layout_toEndOf="@+id/eqrepairtaskheader_machinenametext1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />

        <TextView
            android:id="@+id/eqrepairtaskheader_issuememotext1"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:background="#b3ad9f"
            android:padding="1pt"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="異常現象"
            android:layout_toEndOf="@+id/eqrepairtaskheader_statustext1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />

        <TextView
            android:id="@+id/eqrepairtaskheader_starttimetext1"
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:background="#b3ad9f"
            android:padding="1pt"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="啟修時間"
            android:layout_toEndOf="@+id/eqrepairtaskheader_issuememotext1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />

        <TextView
            android:id="@+id/eqrepairtaskheader_startusertext1"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:background="#b3ad9f"
            android:padding="1pt"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="啟修人"
            android:layout_toEndOf="@+id/eqrepairtaskheader_starttimetext1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />
        <TextView
            android:id="@+id/eqrepairtaskheader_endtimetext1"
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:background="#b3ad9f"
            android:padding="1pt"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="完修時間"
            android:layout_toEndOf="@+id/eqrepairtaskheader_startusertext1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />

        <TextView
        android:id="@+id/eqrepairtaskheader_endusertext1"
        android:layout_width="20dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
            android:background="#b3ad9f"
            android:padding="1pt"
        android:textSize="15sp"
        android:textAlignment="center"
        android:text="完修人"
        android:layout_toEndOf="@+id/eqrepairtaskheader_endtimetext1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="1dp"
        />
        <TextView
            android:id="@+id/eqrepairtaskheader_closetimetext1"
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:background="#b3ad9f"
            android:padding="1pt"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="驗收時間"
            android:layout_toEndOf="@+id/eqrepairtaskheader_endusertext1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />

        <TextView
            android:id="@+id/eqrepairtaskheader_closeusertext1"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:background="#b3ad9f"
            android:padding="1pt"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="驗收人"
            android:layout_toEndOf="@+id/eqrepairtaskheader_closetimetext1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />
    </LinearLayout>
    </LinearLayout>

