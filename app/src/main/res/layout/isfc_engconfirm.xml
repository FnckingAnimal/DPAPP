<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context=".IncludingSFC.engconfirm">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:id="@+id/isfc_engconfirm_headerrl1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#bec4bf"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5067c6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/isfc_engconfirm_headerll1"
            >
            <TextView
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:text="ENGConfirm:"
                android:gravity="center_vertical"
                android:id="@+id/isfc_engconfirm_mainlabelheader"
                android:textSize="20dp"
                android:textIsSelectable="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:textColor="#ffffff"
                ></TextView>

            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="提交"
                android:id="@+id/isfc_engconfirm_submitbt"
                android:background="@drawable/btn_dl"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/isfc_engconfirm_mainlabelheader"
                android:layout_marginLeft="20dp"
                android:onClick="confirmsubmit"/>

        </LinearLayout>


        <EditText
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:text=""
            android:id="@+id/isfc_engconfirm_richet1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_engconfirm_headerll1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="13dp"
            android:textAlignment="center"
            android:background="#ffffff"
            android:inputType="textMultiLine"
            android:gravity="left|top"

        />
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="請掃描主管/工程人員工號進行異常確認"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:id="@+id/isfc_engconfirm_dtbl1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_engconfirm_richet1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="13dp"
            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text=""
            android:gravity="center_vertical"
            android:id="@+id/isfc_engconfirm_peet1"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/isfc_engconfirm_dtbl1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="13dp"
            android:textAlignment="center"
            android:background="#ffffff"
            />

    </RelativeLayout>


</RelativeLayout>
