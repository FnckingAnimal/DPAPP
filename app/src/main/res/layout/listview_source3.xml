<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/ls3_opid"
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="10sp"
        android:layout_alignParentStart="true"
        android:background="#a2edaf"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="1dp"
        />

    <TextView
        android:id="@+id/ls3_opname"
        android:layout_width="140dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="10sp"
        android:layout_alignParentStart="true"
        android:background="#e8efaf"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="1dp"
        android:layout_toEndOf="@+id/ls3_opid"
        />

        <TextView
            android:id="@+id/ls3_inputqty"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="10sp"
            android:layout_toEndOf="@+id/ls3_opname"
            android:background="#f6c59a"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            />

    <TextView
        android:id="@+id/ls3_outputqty"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="10sp"
        android:layout_toEndOf="@+id/ls3_inputqty"
        android:background="#abf6a8"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="1dp"
        />
    <TextView
        android:id="@+id/ls3_setupqty"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="10sp"
        android:layout_toEndOf="@+id/ls3_outputqty"
        android:background="#a8f8f4"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="1dp"
        />

    <TextView
        android:id="@+id/ls3_yield"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="10sp"
        android:layout_toEndOf="@+id/ls3_setupqty"
        android:background="#f1d8f2"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="1dp"
        />

</LinearLayout>